package game.Interraction;

public class Troll {
	
	private int hp;
	private int atk;
	private int def;
	

	
		public Troll() {
		this.hp = 10;
		this.atk = 2;
		this.def = 1;
		
	}
	
	//doBattle은 유저의 공격력을 받아 오크의 체력을 차감합니다.
	public void doBattle(int uAtk) {
		//Troll의 체력을 유저 공격력 만큼 차감시켜주세요.
		
	
		if(Troll.getHp(hp = (hp + def) - uAtk)<=0) {
		
		System.out.println("트롤 남은 체력 : " + hp);
	
		return;
		}
	}

	
	public int getHp(int getHp) {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getAtk() {
		return atk;
	}

	public void setAtk(int atk) {
		this.atk = atk;
	}

	public int getDef() {
		return def;
	}

	public void setDef(int def) {
		this.def = def;
	}
}