package interaction;

import java.util.Scanner;

public class Seller {

	private int money; // 매출 // 초기값 0
	private int mango; // 재고  
	
	public Seller() {
		this.money = 0;
		this.mango = 5;
	}
	
	
	//doBattle은 유저의 공격력을 받아 오크의 체력을 차감합니다.
	public void sellMango(int mango) {
		//Troll의 체력을 유저 공격력 만큼 차감시켜주세요.
		
		this.mango = (mango * money);
		if (mango <= 0) {
			mango = 0; // 필수는 아님, 죽은 몬스터 체력은 0으로 보정
			System.out.println("망고가 모자랍니다.");
			return; //메서드를 여기서 종료합니다.
	
			
			Scanner scan = new Scanner(System.in);
			
			
			//정수 하나를 입력받음
			int a = scan.nextInt();
			
			// 입력받은 정수 출력
			System.out.println(a);
			
			}
		}
	}


     
	

	
